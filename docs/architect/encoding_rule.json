{
  "version": "1.2.0",
  "created_at": "2026-02-17",
  "author": "Architect",
  "status": "mandatory",
  "encoding_rules": {
    "default_encoding": "UTF-8",
    "bom_required": false,
    "prohibited_encodings": ["GBK", "GB2312", "GB18030", "ISO-8859-1", "Windows-1252"]
  },
  "file_rules": {
    "java": {
      "extension": ".java",
      "encoding": "UTF-8",
      "bom": false,
      "header_comment": "// -*- coding: utf-8 -*-"
    },
    "typescript": {
      "extensions": [".ts", ".tsx"],
      "encoding": "UTF-8",
      "bom": false
    },
    "javascript": {
      "extensions": [".js", ".jsx"],
      "encoding": "UTF-8",
      "bom": false
    },
    "html": {
      "extension": ".html",
      "encoding": "UTF-8",
      "bom": false,
      "required_meta": "<meta charset=\"UTF-8\">"
    },
    "css": {
      "extensions": [".css", ".scss", ".less"],
      "encoding": "UTF-8",
      "bom": false
    },
    "json": {
      "extension": ".json",
      "encoding": "UTF-8",
      "bom": false
    },
    "yaml": {
      "extensions": [".yml", ".yaml"],
      "encoding": "UTF-8",
      "bom": false
    },
    "xml": {
      "extension": ".xml",
      "encoding": "UTF-8",
      "bom": false,
      "required_declaration": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>"
    },
    "sql": {
      "extension": ".sql",
      "encoding": "UTF-8",
      "bom": false,
      "required_header": "SET NAMES utf8mb4;"
    },
    "markdown": {
      "extension": ".md",
      "encoding": "UTF-8",
      "bom": false
    },
    "shell": {
      "extensions": [".sh", ".bat", ".ps1"],
      "encoding": "UTF-8",
      "bom": false
    }
  },
  "frontend_config": {
    "vite": {
      "server_headers": {
        "Content-Type": "text/html; charset=UTF-8"
      }
    },
    "html_meta": "<meta charset=\"UTF-8\">"
  },
  "backend_config": {
    "spring": {
      "http_encoding": {
        "charset": "UTF-8",
        "enabled": true,
        "force": true
      }
    },
    "maven": {
      "project_build_sourceEncoding": "UTF-8",
      "project_reporting_outputEncoding": "UTF-8",
      "maven_compiler_encoding": "UTF-8"
    },
    "jdbc_url_params": "useUnicode=true&characterEncoding=utf-8"
  },
  "database_config": {
    "mysql": {
      "character_set_server": "utf8mb4",
      "collation_server": "utf8mb4_unicode_ci",
      "init_connect": "SET NAMES utf8mb4",
      "default_character_set": "utf8mb4"
    }
  },
  "validation": {
    "check_bom": true,
    "check_html_meta": true,
    "check_spring_config": true,
    "check_jdbc_url": true,
    "check_sql_header": true,
    "check_editorconfig": true
  }
}
